# AI API Keys - Kendi key'lerinizi buraya yazın
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider Seçimi
# Seçenekler: claude, chatgpt, both, none
AI_PROVIDER=none

# Model İsimleri
AI_MODEL_CLAUDE=claude-sonnet-4-5-20250929
AI_MODEL_OPENAI=gpt-4o-mini

# AI Ayarları
AI_MAX_TOKENS=500
AI_TIMEOUT=30

# Flask App Settings
# FLASK_ENV controls the environment (development|production)
FLASK_ENV=development
# Comma-separated origins used when FLASK_ENV=production
ALLOWED_ORIGINS=https://example.com,https://app.example.com
